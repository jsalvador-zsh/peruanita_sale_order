            <field name="name">Cotización Corpealim</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">peruanita_sale_order.report_saleorder_corpealim</field>
            <field name="report_file">peruanita_sale_order.report_saleorder_corpealim</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
