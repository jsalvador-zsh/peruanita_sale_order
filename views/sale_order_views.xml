<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de formulario extendida para órdenes de venta -->
        <record id="view_order_form_inherit_custom" model="ir.ui.view">
            <field name="name">sale.order.form.custom</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                
                <!-- Agregar selector de tipo de empresa -->
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="quotation_company_type" widget="radio" options="{'horizontal': true}"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="distributor_id" />
                </xpath>
                
                <!-- Agregar número de cotización personalizado -->
                <xpath expr="//field[@name='name']" position="after">
                    <field name="custom_quotation_number" readonly="1"/>
                </xpath>
                
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                
                <!-- Páginas específicas por tipo de empresa -->
                <xpath expr="//page[@name='other_information']" position="before">
                    
                    <!-- PÁGINA COMÚN PARA TODAS LAS EMPRESAS -->
                    <page string="Información General" name="quotation_info_common">
                        <group>
                            <group string="Información del Cliente">
                                <field name="client_ruc" placeholder="Ej: 20455005869"/>
                                <field name="client_address_detail" placeholder="Dirección completa del cliente"/>
                            </group>
                            <group string="Vigencia de Cotización">
                                <field name="validity_date" string="Fecha de Vigencia"/>
                            </group>
                        </group>
                        
                        <group string="Asunto de la Cotización">
                            <field name="quotation_subject" nolabel="1" 
                                   placeholder="Ej: Cotización para la contratación del Suministro de insumos..."/>
                        </group>
                        
                        <group string="Condiciones Comerciales">
                            <group>
                                <field name="delivery_place"/>
                                <field name="warranty_terms"/>
                            </group>
                        </group>
                    </page>
                    
                    <!-- PÁGINA ESPECÍFICA PERUANITA -->
                    <page string="Información Peruanita" name="quotation_info_peruanita"
                          invisible="quotation_company_type != 'peruanita'">
                        <group string="Control de Contenido">
                            <field name="show_default_technical_table"/>
                            <div class="alert alert-info" role="alert">
                                <strong>Instrucciones:</strong><br/>
                                • <strong>Activado:</strong> Muestra la tabla de mejoras técnicas estándar (Certificado Técnico Productivo, DIGESA, HACCP)<br/>
                                • <strong>Desactivado:</strong> Muestra el contenido del campo "Condiciones Generales PERUANITA" configurado en la empresa
                            </div>
                        </group>
                        <group string="Mejoras a las Especificaciones Técnicas">
                            <field name="technical_improvements_peruanita" nolabel="1" widget="html"/>
                        </group>
                    </page>
                    
                    <!-- PÁGINA ESPECÍFICA GIBBOR -->
                    <page string="Información Gibbor" name="quotation_info_gibbor"
                          invisible="quotation_company_type != 'gibbor'">
                        <group>
                            <field name="gibbor_attention" placeholder="Nombre de la persona de atención"/>
                        </group>
                        <group string="Mejoras a las Especificaciones Técnicas">
                            <field name="technical_improvements_gibbor" nolabel="1" widget="html"/>
                        </group>
                    </page>
                    
                    <!-- PÁGINA ESPECÍFICA CORPEALIM -->
                    <page string="Información Corpealim" name="quotation_info_corpealim"
                          invisible="quotation_company_type != 'corpealim'">
                        <group>
                            <field name="corpealim_attention" placeholder="Nombre de la persona de atención"/>
                        </group>
                        <group string="Mejoras a las Especificaciones Técnicas">
                            <field name="technical_improvements_corpealim" nolabel="1" widget="html"/>
                        </group>
                    </page>
                    
                </xpath>
                
            </field>
        </record>

        <!-- Vista de lista extendida -->
        <record id="view_quotation_tree_inherit_custom" model="ir.ui.view">
            <field name="name">sale.order.tree.custom</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="optional">hide</attribute>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="quotation_company_type" optional="show"/>
                    <field name="custom_quotation_number" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="client_ruc" optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='validity_date']" position="attributes">
                    <attribute name="optional">show</attribute>
                </xpath>
            </field>
        </record>

        <!-- Vista de búsqueda extendida -->
        <record id="view_sales_order_filter_inherit_custom" model="ir.ui.view">
            <field name="name">sale.order.search.custom</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="quotation_company_type"/>
                    <field name="custom_quotation_number"/>
                    <field name="client_ruc"/>
                    <field name="quotation_subject"/>
                </xpath>
                <xpath expr="//filter[@name='my_sale_orders_filter']" position="after">
                    <separator/>
                    <filter string="Peruanita" name="peruanita" 
                            domain="[('quotation_company_type', '=', 'peruanita')]"/>
                    <filter string="Gibbor" name="gibbor" 
                            domain="[('quotation_company_type', '=', 'gibbor')]"/>
                    <filter string="Corpealim" name="corpealim" 
                            domain="[('quotation_company_type', '=', 'corpealim')]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>