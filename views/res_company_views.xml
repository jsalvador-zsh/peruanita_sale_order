<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vista de formulario extendida para empresa -->
        <record id="view_company_form_inherit_multi" model="ir.ui.view">
            <field name="name">res.company.form.multi.custom</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                
                <!-- Agregar pestañas para cada empresa -->
                <xpath expr="//notebook" position="inside">
                    
                    <!-- PESTAÑA PERUANITA -->
                    <page string="Configuración PERUANITA" name="config_peruanita">
                        <group string="Información de la Empresa PERUANITA">
                            <group>
                                <field name="peruanita_ruc" placeholder="20455005869"/>
                                <field name="peruanita_email" placeholder="ventas@peruanita.com"/>
                            </group>
                            <group>
                                <field name="peruanita_phone" placeholder="+51 XXX XXX XXX"/>
                            </group>
                        </group>
                        
                        <group string="Dirección PERUANITA">
                            <field name="peruanita_address" nolabel="1" 
                                   placeholder="Calle Francia Mza. A Lote. 9 Asoc. APTASA Parque Industrial, Cerro Colorado"/>
                        </group>
                        
                        <group string="Textos de Cotización PERUANITA">
                            <field name="peruanita_intro_text" nolabel="1" widget="html"/>
                        </group>
                        
                        <group string="Condiciones Generales PERUANITA">
                            <field name="peruanita_conditions_text" nolabel="1" widget="html"/>
                        </group>
                        
                        <group>
                            <div class="alert alert-info" role="alert">
                                <strong>Nota:</strong> PERUANITA usa un layout personalizado con background. 
                                No requiere logo adicional.
                            </div>
                        </group>
                    </page>
                    
                    <!-- PESTAÑA GIBBOR -->
                    <page string="Configuración GIBBOR" name="config_gibbor">
                        <group string="Logo GIBBOR">
                            <field name="gibbor_logo" widget="image" class="oe_avatar"/>
                            <div class="alert alert-info" role="alert">
                                <strong>Importante:</strong> Sube el logo de GIBBOR aquí. 
                                Este logo aparecerá en las cotizaciones de GIBBOR.
                            </div>
                        </group>
                        
                        <group string="Información de la Empresa GIBBOR">
                            <group>
                                <field name="gibbor_ruc"/>
                                <field name="gibbor_email"/>
                                <field name="gibbor_manager_name"/>
                            </group>
                            <group>
                                <field name="gibbor_phone" placeholder="+51 XXX XXX XXX"/>
                            </group>
                        </group>
                        
                        <group string="Dirección GIBBOR">
                            <field name="gibbor_address" nolabel="1"/>
                        </group>
                        
                        <group string="Texto de Introducción GIBBOR">
                            <field name="gibbor_intro_text" nolabel="1" widget="html"/>
                        </group>
                    </page>
                    
                    <!-- PESTAÑA CORPEALIM -->
                    <page string="Configuración CORPEALIM" name="config_corpealim">
                        <group string="Logo CORPEALIM">
                            <field name="corpealim_logo" widget="image" class="oe_avatar"/>
                            <div class="alert alert-info" role="alert">
                                <strong>Importante:</strong> Sube el logo de CORPEALIM aquí. 
                                Este logo aparecerá en las cotizaciones de CORPEALIM.
                            </div>
                        </group>
                        
                        <group string="Información de la Empresa CORPEALIM">
                            <group>
                                <field name="corpealim_ruc"/>
                                <field name="corpealim_email"/>
                                <field name="corpealim_manager_name"/>
                            </group>
                            <group>
                                <field name="corpealim_phone" placeholder="+51 XXX XXX XXX"/>
                            </group>
                        </group>
                        
                        <group string="Dirección CORPEALIM">
                            <field name="corpealim_address" nolabel="1"/>
                        </group>
                        
                        <group string="Texto de Introducción CORPEALIM">
                            <field name="corpealim_intro_text" nolabel="1" widget="html"/>
                        </group>
                        
                        <group string="Información Bancaria CORPEALIM">
                            <field name="corpealim_bank_info" nolabel="1" 
                                   placeholder="Banco BBVA Continental 0011-0778-0100018684-89, CCI: 011-778-000100018684-89"/>
                        </group>
                    </page>
                    
                </xpath>
                
            </field>
        </record>

    </data>
</odoo>